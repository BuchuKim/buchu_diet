<% layout('layouts/boilerplate') %>
<div class="row justify-content-center">
  <div class="col-10 col-lg-4">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title"><%=food.name%></h1>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex align-items-center">
          <div class="me-auto">먹은 양</div>
          <form action="/<%=time%>/<%=food._id%>?_method=put" method="post">
            <div class="d-flex">
              <div class="input-group input-group-sm">
                <input
                  type="text"
                  class="form-control"
                  id="amount"
                  name="amount"
                  value="<%=food.amount%>"
                  aria-describedby="amountperservs"
                />
                <span class="input-group-text" id="amountperservs"
                  ><%=food.serving%></span
                >
                <button type="submit" class="btn btn-outline-secondary btn-sm">
                  변경
                </button>
              </div>
            </div>
          </form>
        </li>
        <li class="list-group-item d-flex">
          <div class="me-auto">칼로리</div>
          <%=food.calories%>kcal
        </li>
        <li class="list-group-item">
          <div class="d-flex">
            <div class="me-auto">탄수화물</div>
            <%=food.carbs%>g
          </div>
          <div class="d-flex">
            <div class="me-auto"><small>당</small></div>
            <small><%=food.sugar%>g</small>
          </div>
        </li>
        <li class="list-group-item d-flex">
          <div class="me-auto">단백질</div>
          <%=food.protein%>g
        </li>
        <li class="list-group-item">
          <div class="d-flex">
            <div class="me-auto">지방</div>
            <%=food.fat%>g
          </div>
          <div class="d-flex">
            <div class="me-auto"><small>포화지방</small></div>
            <small><%=food.saturated%>g</small>
          </div>
        </li>
      </ul>
      <div class="card-body">
        <div class="text-end">
          <form action="/<%=time%>/<%=food._id%>?_method=delete" method="post">
            <button type="submit" class="btn btn-outline-danger">
              삭제하기
            </button>
          </form>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-end mt-2">
      <div><a href="/">뒤로가기</a></div>
    </div>
  </div>
</div>
